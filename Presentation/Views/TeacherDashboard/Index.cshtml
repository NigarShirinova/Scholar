@using Business.ViewModels.TeacherDashboard
@model TeacherDashboardIndexVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="~/css/dashboard.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
          integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>

    <!-- Sidebar -->
    <nav class="sidebar">
        <h2>Scholar</h2>
        <ul>
            <a asp-action="index" asp-controller="TeacherDashboard" >
            <li><i class="fa-solid fa-briefcase"></i>Workspace</li>  </a>
            <li><i class="fa-solid fa-list-check"></i><p>Tasks & Exams</p></li>
            <a asp-action="Balance" asp-controller="TeacherDashboard">
            <li><i class="fa-solid fa-sack-dollar"></i><p>Balance</p></li> </a>
            <a asp-action="index" asp-controller="Home">
            <li><i class="fa-solid fa-house"></i><p>Go Home</p></li> </a>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <header class="header">
            <h1>Teacher Dashboard</h1>
        </header>

        <!-- Dashboard Cards -->
        <section class="dashboard-cards">
            <div class="card">
                <h3>All Students</h3>
                <p>10 students</p>
            </div>
            <div class="card">
                <h3>Your Income</h3>
                <p>$1000</p>
            </div>
            <div class="card">
                <h3>Lesson Hours</h3>
                <p>300 hours</p>
            </div>
        </section>

        <div class="container">
            <!-- Recent Lessons Table -->
            <section class="recentlessons">
                <table>
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>Lesson Name</th>
                            <th>Date</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Alice Johnson</td>
                            <td>Mathematics</td>
                            <td>2025-03-01</td>
                            <td>14:00</td>
                        </tr>
                        <tr>
                            <td>Michael Brown</td>
                            <td>Physics</td>
                            <td>2025-03-02</td>
                            <td>14:00</td>
                        </tr>
                        <tr>
                            <td>Sarah Williams</td>
                            <td>Chemistry</td>
                            <td>2025-03-03</td>
                            <td>14:00</td>
                        </tr>
                        <tr>
                            <td>Michael Brown</td>
                            <td>Physics</td>
                            <td>2025-03-02</td>
                            <td>14:00</td>
                        </tr>
                        <tr>
                            <td>Sarah Williams</td>
                            <td>Chemistry</td>
                            <td>2025-03-03</td>
                            <td>14:00</td>
                        </tr>
                    </tbody>
                </table>
            </section>

            <!-- Chart Section -->
            <div class="chart">
                <canvas id="chart"></canvas>
                <span id="done">60</span>
                <span id="waiting">40</span>
            </div>
        </div>

        <!-- Balance & Available Dates -->
        <div class="row3">
            <div class="balance-card">
                <div class="balance">
                    <p>Your Balance</p>
                    <h2>$ @Model.Balance</h2>
                </div>
                <div class="buttons">
                     <a asp-action="Balance" asp-controller="TeacherDashboard"><button>Increase Your Balance</button></a>
                </div>
            </div>

            <div class="availabledates">
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>2025-03-01</td>
                            <td>14:00</td>
                            <td>
                                <div class="actions">
                                    <i class="fa-solid fa-pencil"></i>
                                    <i class="fa-solid fa-trash-can"></i>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>2025-03-02</td>
                            <td>14:00</td>
                            <td>
                                <div class="actions">
                                    <i class="fa-solid fa-pencil"></i>
                                    <i class="fa-solid fa-trash-can"></i>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>2025-03-02</td>
                            <td>14:00</td>
                            <td>
                                <div class="actions">
                                    <i class="fa-solid fa-pencil"></i>
                                    <i class="fa-solid fa-trash-can"></i>
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>
                <div class="addbutton">
                    <button>Add New Available Date</button>
                </div>
            </div>
        </div>
    </div> <!-- End Main Content -->
    <!-- JavaScript Files -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/chart.js"></script>

</body>
</html>
