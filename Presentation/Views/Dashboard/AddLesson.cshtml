@using Business.ViewModels.TeacherDashboard
@model LessonCreateVM




	<!-- Main Content -->
	<div class="main-content">
		<header class="header">
			AddLesson
		</header>

    <form asp-action="AddLesson" method="post" enctype="multipart/form-data">
        <div>
            <label>Name</label>
            <input asp-for="Name" required
                   style="border: 1px solid #ccc; border-radius: 20px; font-size: 16px; padding: 10px; margin-bottom: 15px; width: 100%;" />
        </div>
        <div>
            <label>Price</label>
            <input asp-for="Price" type="number" step="0.01" required
                   style="border: 1px solid #ccc; border-radius: 20px; font-size: 16px; padding: 10px; margin-bottom: 15px; width: 100%;" />
        </div>
        <div>
            <label>Lesson Date</label>
            <input asp-for="LessonDate" type="datetime-local" required
                   style="border: 1px solid #ccc; border-radius: 20px; font-size: 16px; padding: 10px; margin-bottom: 15px; width: 100%;" />
        </div>

        <button type="submit"
               >
            Save Lesson
        </button>
    </form>


	</div>
